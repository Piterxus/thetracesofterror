---
import Layout from "./Layout.astro";
import Imgs from "../components/Imgs";

interface Props {
  sectionTitle: string;
}

const { sectionTitle } = Astro.props;
---

<Layout title="the traces of terror">
  <div class="gallery">
    <div class="galleryHeader">
      <h1>{sectionTitle}</h1>
      <a href="/" class="back-button">BACK</a>
    </div>
    <Imgs client:load />
    <div class="buttonUploadContainer">
      <button class="fileUpload custom-file-upload" id="fileUp"
        >UPLOAD IMAGE</button
      >
    </div>
    <div class="fileUploadContainer">
      <div class="imgForm">
        <label for="uploader">Uploader:</label>
        <input
          type="text"
          name="uploaded"
          placeholder="email or username (optional)"
        />
      </div>
      <div class="imgForm">
        <label for="type">Type:</label>
        <select name="type" id="type">
          <option value="cinema">Cinema</option>
          <option value="tv">TV</option>
          <option value="comic">Comic</option>
          <option value="others">Others</option>
        </select>
      </div>
      <div class="imgForm imgFormLandScape">
        <label for="file-upload" class="custom-file-upload labelFileUpload"
          >Upload Image</label
        >
        <input id="file-upload" type="file" />
        <button class="custom-file-upload" id="close">CLOSE</button>
      </div>
    </div>
  </div>
</Layout>

<style>
  @font-face {
    font-family: "Fright";
    src: url(../fright_maiden/Fright\ Maiden\ Demo.ttf) format("truetype");
  }
  body {
    margin: 0;
    overflow: hidden;
  }
  h1,
  a {
    text-align: center;
    font-family: "Fright";
    color: white;
    -webkit-text-stroke-width: 0.5px;
    -webkit-text-stroke-color: black;
    text-decoration: none;
  }
  .gallery {
    background-color: #13151a;
    height: 90vh;
    width: 90vw;
    border-radius: 10px;
    margin: auto;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    bottom:5vh;
  }
  .galleryHeader {
    text-align: center;
  }
  .back-button {
    position: relative;
    display: inline-block;
  }
  .buttonUploadContainer {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 10px;
  }
  .fileUpload {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 1rem;
    width: 10vw;
    /* position: absolute; */
    /* bottom: 10px;
    left: 50%;
    transform: translateX(-50%); */
  }
  .fileUploadContainer {
    display: none;
    justify-content: center;
    margin-top: 1rem;
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    width: 100vw;
    margin-bottom: 10px;
  }
  #file-upload {
    display: none;
  }
  .custom-file-upload {
    display: inline-block;
    padding: 0.5rem 1rem;
    cursor: pointer;
    background-color: #23262d;
    color: white;
    border: 1px solid white;
    border-radius: 5px;
    text-align: center;
    font-family: "Fright";
    -webkit-text-stroke-width: 0.5px;
    -webkit-text-stroke-color: black;
    margin: auto 1rem;
  }
  .custom-file-upload:hover {
    background-color: #3a3d44;
  }
  .imgForm {
    margin: 10px;
    display: flex;
  }
  label {
    display: inline-block;
    width: 80px;
    color: white;
    font-family: "Fright";
  }
  input,
  select {
    padding: 0.5rem;
    font-size: 1rem;
    font-family: "Fright";
    color: black;
    border-radius: 5px;
    flex: 1;
  }
  .labelFileUpload {
    margin-top: 20px;
    height: 15px;
    font-size: small;
  }
  #close {
    margin-top: 20px;
    width: 140px;
  }
  @media (max-width: 480px) {
    .fileUploadContainer {
      position: static;
      transform: none;
      margin-top: 5rem;
      flex-direction: column;
    }
    .custom-file-upload {
      width: 80%;
      text-align: center;
    }
    input,
    select {
      width: 80%;
    }
    .back-button::after {
      content: "Tap on images to view them!";
      display: block;
      font-size: 0.8rem;
      color: white;
      text-align: center;
      margin-top: 1rem;
    }
  }
  @media (orientation: landscape) {
    h1{
      display: none;
    }
    .galleryHeader{
      margin-top: 5px;
    }
    .fileUpload {
      bottom: 20px;
    }
    .fileUploadContainer {
      bottom: 40px;
      position: relative;
    }
    .imgForm {
      flex-direction: column;
    }
    .imgFormLandScape {
      flex-direction: row;
    }
    label,
    input,
    select {
      font-size: x-small;
      height: 50%;
      margin-bottom: 10px;
    }
    #fileUp {
      position: relative;
      width: 15vw;
      bottom: 40px;
    }
  }
