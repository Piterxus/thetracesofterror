  }
  .fileUpload {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 1rem;
    width: 10vw;
  }
  .fileUploadContainer {
    display: none; /* Oculto por defecto */
    justify-content: center;
    align-items: center;
    flex-direction: column;
    position: fixed; /* Posición fija para centrar en la pantalla */
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%); /* Centrando en la pantalla */
    background-color: rgba(
      19,
      21,
      26,
      0.9
    ); /* Fondo semi-transparente para destacar el contenedor */
    padding: 2rem;
    border-radius: 10px;
    z-index: 1000; /* Asegura que esté por encima de otros elementos */
  }
  #file-upload {
    display: none;
  }
  .custom-file-upload {
    display: inline-block;
    padding: 0.5rem 1rem;
    cursor: pointer;
    background-color: #23262d;
    color: white;
    border: 1px solid white;
    border-radius: 5px;
    text-align: center;
    font-family: "Fright";
    -webkit-text-stroke-width: 0.5px;
    -webkit-text-stroke-color: black;
    margin: auto 1rem;
  }
  .custom-file-upload:hover {
    background-color: #3a3d44;
  }
  .imgForm {
    margin: 10px 0; /* Espacio entre campos */
    display: flex;
    flex-direction: column; /* Disposición en columna */
    width: 100%; /* Ocupa todo el ancho del contenedor */
  }
  label {
    display: inline-block;
    width: 90px;
    color: white;
    font-family: "Fright";
  }
  input,
  select {
    padding: 0.5rem;
    font-size: 1rem;
    font-family: "Fright";
    color: black;
    border-radius: 5px;
    flex: 1;
  }
  input:not([type="file"]) {
    height: 15px;
  }
  select {
    height: 35px;
  }
  .labelFileUpload {
    margin-top: 20px;
    height: 15px;
    font-size: small;
  }
  .imgButtons {
