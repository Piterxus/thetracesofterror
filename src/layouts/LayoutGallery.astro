---
import Layout from "./Layout.astro";
interface Props {
  sectionTitle: string;
}

const { sectionTitle } = Astro.props;
const arrowLeft = "/imgs/arrow-left.svg";
const arrowRight = "/imgs/arrow-right.svg";
---

<Layout title="the traces of terror">
  <div class="gallery">
    <div class="galleryHeader">
      <h1>{sectionTitle}</h1>
      <a href="/">BACK</a>
    </div>
    <div class="imageGalleryContainer">
      <img class="arrow left" src={arrowLeft} alt="Left Arrow" />
      <div class="imageGallery"></div>
      <img class="arrow right" src={arrowRight} alt="Right Arrow" />
    </div>
  </div>
</Layout>

<style>
  @font-face {
    font-family: "Fright";
    src: url(../fright_maiden/Fright\ Maiden\ Demo.ttf) format("truetype");
  }
  body {
    margin: 0;
    overflow: hidden; /* Evita el scroll vertical */
  }
  h1,
  a {
    text-align: center;
    font-family: "Fright";
    color: white;
    -webkit-text-stroke-width: 0.5px;
    -webkit-text-stroke-color: black;
    text-decoration: none;
  }
  .gallery {
    background-color: #13151a;
    height: 90vh;
    width: 90vw;
    border-radius: 10px;
    margin: auto;
    position: relative;
  }

  .galleryHeader {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem;
  }

  .imageGalleryContainer {
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 1rem;
    height: 100%;
    position: relative;
  }
  .imageGallery {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 50vh;
    height: 50vh;
    background-color: #23262d;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    border-radius: 10px;
  }
  .arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
  }
  .arrow.left {
    left: 10px;
  }
  .arrow.right {
    right: 10px;
  }
</style>
