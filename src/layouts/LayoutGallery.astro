  <div class="galleryHeader">
    <h1>{sectionTitle}</h1>
    <div class="controlButtons">
      <a href="/" class="back-button">BACK</a>
      <button class="fileUpload custom-file-upload" id="fileUp"
        >UPLOAD IMAGE</button
      >
    </div>
  </div>
  <div>
    <ImgsScroll client:load />
  </div>
  <div class="fileUploadContainer">
    <div class="imgForm">
      <label for="uploader">Uploader:</label>
      <input
        type="text"
        name="uploaded"
        placeholder="email or username (optional)"
        maxlength="35"
      />
    </div>
    <div class="imgForm">
      <label for="type">Type:</label>
      <select name="type" id="type">
        <option value="cinema">Cinema</option>
        <option value="tv">TV</option>
        <option value="comic">Comic</option>
        <option value="others">Others</option>
      </select>
    </div>
    <div class="imgForm">
      <label for="description">Description: </label>
      <input
        type="text"
        name="description"
        placeholder="The image belongs to (optional)"
        id="description"
        maxlength="40"
      />
    </div>
    <div class="imgForm imgButtons">
      <label for="file-upload" class="custom-file-upload labelFileUpload"
        >Upload Image</label
      >
      <input id="file-upload" type="file" />
      <button class="custom-file-upload" id="close">CLOSE</button>
    </div>
  </div>
</Layout>

<style>
  @font-face {
    font-family: "Fright";
    src: url(../fright_maiden/Fright\ Maiden\ Demo.ttf) format("truetype");
  }
  body {
    margin: 0;
    /* overflow: hidden; */
  }
  /* h1,
  a {
    text-align: center;
    font-family: "Fright";
    color: white;
    -webkit-text-stroke-width: 0.5px;
    -webkit-text-stroke-color: black;
    text-decoration: none;
    position: absolute;
    top: 0px;
  } */
  .gallery {
    background-color: #13151a;
    height: 90vh;
    width: 90vw;
    border-radius: 10px;
    margin: auto;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    bottom: 5vh;
  }
  .controlButtons {
    display: flex;
    justify-content: center;
    align-items: center;
   
  }
  .galleryHeader {
    text-align: center;
    font-family: "Fright";
    color: white;
    -webkit-text-stroke-width: 0.5px;
    -webkit-text-stroke-color: black;
    text-decoration: none;
    position: relative;
    top: 0px;
    width: 100%;
  }

  .galleryHeader a {
    text-decoration: none;
    color: white;
    -webkit-text-stroke-width: 0.5px;
    -webkit-text-stroke-color: black;
  }
  /* .back-button {
    position: relative;
    display: inline-block;
  } */
  .buttonUploadContainer {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 10px;
  }
  .fileUpload {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 1rem;
    width: 10vw;
  }
  .fileUploadContainer {
    display: none;
    justify-content: center;
    margin-top: 1rem;
    position: absolute;
    bottom: 1px;
    left: 50%;
    transform: translateX(-50%);
    width: 100vw;
    margin-bottom: 10px;
  }
  #file-upload {
    display: none;
  }
  .custom-file-upload {
    display: inline-block;
    padding: 0.5rem 1rem;
    cursor: pointer;
    background-color: #23262d;
    color: white;
    border: 1px solid white;
    border-radius: 5px;
    text-align: center;
    font-family: "Fright";
    -webkit-text-stroke-width: 0.5px;
    -webkit-text-stroke-color: black;
    margin: auto 1rem;
  }
  .custom-file-upload:hover {
    background-color: #3a3d44;
  }
  .imgForm {
    margin: 10px;
    display: flex;
  }
  label {
    display: inline-block;
    width: 90px;
    color: white;
    font-family: "Fright";
  }
  input,
  select {
    padding: 0.5rem;
    font-size: 1rem;
    font-family: "Fright";
    color: black;
    border-radius: 5px;
    flex: 1;
  }
  input:not([type="file"]) {
    height: 15px;
  }
  select {
    height: 35px;
  }
  .labelFileUpload {
    margin-top: 20px;
    height: 15px;
    font-size: small;
  }
  #fileUp {
    width: 120px;
  }
  #close {
    margin-top: 20px;
    width: 140px;
  }
  @media (max-width: 480px) {
    h1 {
      font-size: x-large;
    }
    .fileUploadContainer {
      position: static;
      transform: none;
      margin-top: 5rem;
      flex-direction: column;
      width: 95%;
    }
    .custom-file-upload {
      width: 80%;
      text-align: center;
    }
    label {
      font-size: small;
    }
    input,
    select {
      width: 100%;
      font-size: small;
    }
    /* .back-button::after {
      content: "Tap on images to view them!";
      display: block;
      font-size: 0.8rem;
      color: white;
      text-align: center;
      margin-top: 1rem;
    } */
  }

  /* Reglas para dispositivos móviles en orientación landscape y alta densidad de píxeles */
  @media (max-width: 1024px) and (orientation: landscape) and (-webkit-min-device-pixel-ratio: 2),
    (max-width: 1024px) and (orientation: landscape) and (min-resolution: 192dpi) {
    /* h1 {
      display: none;
    } */
    /* .back-button::after {
      content: "Tap on images to view them!";
      display: block;
      font-size: 0.6rem;
      color: white;
      text-align: center;
     
    } */
    /* .galleryHeader {
      margin-top: 5px;
    } */
    /* .fileUpload {
      position: relative;
      width: 15vw;
      bottom: 25px;
      font-size: x-small;
    } */
    .fileUploadContainer {
      bottom: 30px;
      position: relative;
    }
    .imgForm {
      flex-direction: column;
    }
    .imgButtons {
      flex-direction: row;
    }
    label,
    input,
    select {
      font-size: x-small;
      height: 50%;
      margin-bottom: 10px;
      width: 90%;
    }

    #close {
      width: 90px;
    }
  }
</style>
