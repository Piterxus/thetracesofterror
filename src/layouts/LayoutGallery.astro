---
import Layout from "./Layout.astro";
import Imgs from "../components/Imgs";
interface Props {
  sectionTitle: string;
}
const { sectionTitle } = Astro.props;
---

<Layout title="the traces of terror">
  <div class="gallery">
    <div class="galleryHeader">
      <h1>{sectionTitle}</h1>
      <a href="/">BACK</a>
    </div>
    <Imgs client:load />

    <div class="fileUploadContainer">
      <label for="file-upload" class="custom-file-upload"> Upload Image </label>
      <input id="file-upload" type="file" />
    </div>
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const fileUpload = document.getElementById(
        "file-upload"
      ) as HTMLInputElement | null;

      if (!fileUpload) {
        console.error("File upload input not found");
        return;
      }

      fileUpload.addEventListener("change", async (e) => {
        if (!fileUpload.files || fileUpload.files.length === 0) {
          alert("Please select a file to upload.");
          return;
        }

        const formData = new FormData();
        const file = fileUpload.files[0];
        formData.append("image", file);
      
        try {
          const response = await fetch(
          
            import.meta.env.PUBLIC_IMAGES_API_URL,
            {
              method: "POST",
              body: formData,
            }
          );

          const result = await response.json();

          if (response.ok) {
            alert("Image uploaded successfully: " + result.path);
            window.location.reload();
           
          } else {
            alert("Error uploading image: " + result.error);
          }
        } catch (error) {
          if (error instanceof Error) {
            alert("Error uploading image: " + error.message);
          } else {
            alert("Unexpected error uploading image");
          }
        }
      });
    });
  </script>
</Layout>

<style>
  @font-face {
    font-family: "Fright";
    src: url(../fright_maiden/Fright\ Maiden\ Demo.ttf) format("truetype");
  }
  body {
    margin: 0;
    overflow: hidden; 
  h1,
  a {
    text-align: center;
    font-family: "Fright";
    color: white;
    -webkit-text-stroke-width: 0.5px;
    -webkit-text-stroke-color: black;
    text-decoration: none;
  }
  .gallery {
    background-color: #13151a;
    height: 90vh; 
    width: 90vw;
    border-radius: 10px;
    margin: auto;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center; 

  .galleryHeader {
    text-align: center;
    padding: 1rem;
  }

  .fileUploadContainer {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 1rem;
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
  }
  #file-upload {
    display: none; /* Oculta el input real */
  }
  .custom-file-upload {
    display: inline-block;
    padding: 0.5rem 1rem;
    cursor: pointer;
    background-color: #23262d;
    color: white;
    border: 1px solid white;
    border-radius: 5px;
    text-align: center;
    font-family: "Fright";
    -webkit-text-stroke-width: 0.5px;
    -webkit-text-stroke-color: black;
  }
  .custom-file-upload:hover {
    background-color: #3a3d44;
  }



  @media (max-width: 480px) {

    .fileUploadContainer {
      position: static;
      transform: none;
      margin-top: 1rem;
    }
    .custom-file-upload {
      width: 80%;
      text-align: center;
    }
  }
</style>
