---
import Layout from "./Layout.astro";
interface Props {
  sectionTitle: string;
}

const { sectionTitle } = Astro.props;
const arrowLeft = "/imgs/arrow-left.svg";
const arrowRight = "/imgs/arrow-right.svg";
---

<Layout title="the traces of terror">
  <div class="gallery">
    <div class="galleryHeader">
      <h1>{sectionTitle}</h1>
      <a href="/">BACK</a>
    </div>
    <div class="imageGalleryContainer">
      <img class="arrow left" src={arrowLeft} alt="Left Arrow" />
      <div class="imageGallery"></div>
      <img class="arrow right" src={arrowRight} alt="Right Arrow" />
    </div>
    <div class="fileUploadContainer">
      <label for="file-upload" class="custom-file-upload"> Upload Image </label>
      <input id="file-upload" type="file" />
    </div>
  </div>
</Layout>

<style>
  @font-face {
    font-family: "Fright";
    src: url(../fright_maiden/Fright\ Maiden\ Demo.ttf) format("truetype");
  }
  body {
    margin: 0;
    overflow: hidden; /* Evita el scroll vertical */
  }
  h1,
  a {
    text-align: center;
    font-family: "Fright";
    color: white;
    -webkit-text-stroke-width: 0.5px;
    -webkit-text-stroke-color: black;
    text-decoration: none;
  }
  .gallery {
    background-color: #13151a;
    height: 90vh; /* Aseg√∫rate de que ocupe toda la altura de la ventana */
    width: 90vw;
    border-radius: 10px;
    margin: auto;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center; /* Centra el contenido verticalmente */
  }

  .galleryHeader {
    text-align: center;
    padding: 1rem;
  }

  .imageGalleryContainer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    flex-grow: 1;
    position: relative; /* Asegura que el contenedor tenga posicionamiento relativo */
  }
  .imageGallery {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 50vh;
    height: 50vh;
    background-color: #23262d;
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    border-radius: 10px;
  }
  .arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
  }
  .arrow.left {
    left: 10px;
  }
  .arrow.right {
    right: 10px;
  }
  .fileUploadContainer {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 1rem;
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
  }
  #file-upload {
    display: none; /* Oculta el input real */
  }
  .custom-file-upload {
    display: inline-block;
    padding: 0.5rem 1rem;
    cursor: pointer;
    background-color: #23262d;
    color: white;
    border: 1px solid white;
    border-radius: 5px;
    text-align: center;
    font-family: "Fright";
    -webkit-text-stroke-width: 0.5px;
    -webkit-text-stroke-color: black;
  }
  .custom-file-upload:hover {
    background-color: #3a3d44;
  }

  @media (max-width: 768px) {
    .imageGalleryContainer {
      justify-content: center;
    }
    .arrow {
      width: 10%;
    }
    .imageGallery {
      width: 40vh;
      height: 40vh;
    }
  }

  @media (max-width: 480px) {
    .arrow {
      display: none;
    }
    .imageGallery {
      width: 80vw;
      height: 80vw;
    }
    .fileUploadContainer {
      position: static;
      transform: none;
      margin-top: 1rem;
    }
    .custom-file-upload {
      width: 80%;
      text-align: center;
    }
  }
</style>
